<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ListContactServlet</servlet-name>
        <servlet-class>com.meiko.servlet.ListContactServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddContactServlet</servlet-name>
        <servlet-class>com.meiko.servlet.AddContactServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QueryContactServlet</servlet-name>
        <servlet-class>com.meiko.servlet.QueryContactServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateContactServlet</servlet-name>
        <servlet-class>com.meiko.servlet.UpdateContactServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteContactServlet</servlet-name>
        <servlet-class>com.meiko.servlet.DeleteContactServlet</servlet-class>
    </servlet>





    <servlet-mapping>
        <servlet-name>ListContactServlet</servlet-name>
        <url-pattern>/ListContactServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddContactServlet</servlet-name>
        <url-pattern>/AddContactServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QueryContactServlet</servlet-name>
        <url-pattern>/QueryContactServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateContactServlet</servlet-name>
        <url-pattern>/UpdateContactServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteContactServlet</servlet-name>
        <url-pattern>/DeleteContactServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
